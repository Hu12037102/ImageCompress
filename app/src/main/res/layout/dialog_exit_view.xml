<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFFFFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/exit_app_content"
        android:textColor="@color/colorFF333333"
        android:textSize="16sp" />


    <CheckBox
        android:id="@+id/delete_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:button="@null"
        android:drawableLeft="@drawable/selector_checked_view"
        android:drawablePadding="5dp"
        android:text="@string/exit_is_delete_file"
        android:textSize="13sp" />
    <View
        style="@style/HorizontalLine"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textSize="18sp"
            android:textColor="@color/colorFF333333"
            android:gravity="center"
            android:background="@drawable/selector_item"
            />
        <View
            style="@style/VerticalLine"
           />
        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/colorFF333333"
            android:gravity="center"
            android:background="@drawable/selector_item"
            android:text="确定"
            />
    </LinearLayout>
</LinearLayout>